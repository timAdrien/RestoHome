<!DOCTYPE html>
<html>
<head>
  <title>Ruby Getting Started on Heroku</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-static-top navbar-inverse">
  <div class="container">
    <ul class="nav navbar-nav">
      <li>
        <a href="/"><span class="glyphicon glyphicon-home"></span> Accueil</a>
      </li>
      <li>
        <a href="/villes"><span class="glyphicon glyphicon-road"></span> Villes</a>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="navbar-right">
        <a href="/panier"><span class="glyphicon glyphicon-shopping-cart"></span> Panier ( <%= session[:paniers].count %> )</a>
      </li>
    </ul>
  </div>
</nav>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <%= yield %>
  </div>
  <div class="col-md-2"></div>
</div>
<pre>
  <%= session[:paniers] %>
</pre>
</body>
</html>
